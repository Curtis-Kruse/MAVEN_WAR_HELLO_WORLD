pipeline {
    agent any

    tools {
        maven 'MVN_HOME'
    }

    stages {
        stage('Maven Build') {
            steps {
                echo '=== Maven Build ==='
                // Run Maven build using a Windows batch command on Windows or shell command on Linux
                    sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                echo '=== Docker Build ==='
                // Build Docker image from the WAR file
                echo 'Building Docker image...'
                script {
                    def dockerHubCredentials = credentials('dockerhub-credentials')
                    sh "docker build -t curtiskruse-final ."
                }
            }
        }

        stage('DockerHub Push') {
            steps {
                echo '=== DockerHub Push ==='
                // Log in to DockerHub using credentials
                script {
                    def dockerHubCredentials = credentials('dockerhub-credentials')
                    withCredentials([usernamePassword(credentialsId: dockerHubCredentials.id, usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    }
                }

                // Push Docker image to DockerHub
                echo 'Pushing Docker image to DockerHub...'
                sh 'docker push curtiskruse-final'
            }
        }

        stage('Docker Deploy') {
            steps {
                echo '=== Docker Deploy ==='
                // Use Ansible to deploy the Docker container
                echo 'Running Ansible playbook...'
                ansiblePlaybook(
                    playbook: 'path/to/your/deploy-playbook.yml',
                    inventory: 'path/to/your/inventory/file'
                )
            }
        }
    }
}
