pipeline {
    agent any

    environment {
        DOCKER_USERNAME = 'your_dockerhub_username'
        DOCKER_PASSWORD = 'your_dockerhub_password'
    }

    tools {
        maven 'MVN_HOME'
    }

    stages {
        stage('Maven Build') {
            steps {
                echo '=== Maven Build ==='
                // Run Maven build using a Windows batch command on Windows or shell command on Linux
                sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                echo '=== Docker Build ==='
                // Build Docker image from the WAR file
                echo 'Building Docker image...'
                sh "docker build -t curtiskruse123/finalproj ."
            }
        }

        stage('DockerHub Push') {
            steps {
                echo '=== DockerHub Push ==='
                // Log in to DockerHub using environment variables
                sh "docker login -u curtiskruse123 -p Kori!09279"

                // Push Docker image to DockerHub
                echo 'Pushing Docker image to DockerHub...'
                sh 'docker push curtiskruse123/finalproj'
            }
        }

        stage('Docker Deploy') {
            steps {
                echo '=== Docker Deploy ==='
                // Use Ansible to deploy the Docker container
                echo 'Running Ansible playbook...'
                ansiblePlaybook(
                    playbook: deploy-docker.yml,
                    inventory: dev.inv
                )
            }
        }
    }
}
